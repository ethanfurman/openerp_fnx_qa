!!! xml1.0
%openerp
    %data

        %menuitem name='Quality Assurance' sequence='30' groups='fnx_qa.group_fnx_quality_assurance_user' #fnx_quality_assurance_main

        %menuitem name='Quality Assurance' sequence='10' parent='fnx_quality_assurance_main' groups='fnx_qa.group_fnx_quality_assurance_user' #fnx_quality_assurance_sub


        %record model='ir.ui.view' #fnx_quality_assurance_form_view
            @name: Quality Assurance Form
            @model: fnx.quality_assurance
            @arch type='xml'
                %form $Quality_Assurance version='7.0'
                    %group
                        %group colspan='2'
                            @product_id
                            @lot_no
                            @test_date
                    %separator $Standand_Tests
                    %div $Standard_Tests .fnx_qa
                        %table
                            %tr
                                %th : Dilution
                                %th : Coliform
                                %th : E.coli
                                %th : APC
                                %th : YM
                            %tr
                                %td .down : 1/10
                                %td
                                    @coliform_10 placeholder='Not Applicable'
                                %td
                                    @e_coli_10 placeholder='Not Applicable'
                                %td
                                    @aerobic_plate_count_10 placeholder='Not Applicable'
                                %td
                                    @yeast_mold_10 placeholder='Not Applicable'
                            %tr
                                %td .down : 1/100
                                %td
                                    @coliform_100 placeholder='Not Applicable'
                                %td
                                    @e_coli_100 placeholder='Not Applicable'
                                %td
                                    @aerobic_plate_count_100 placeholder='Not Applicable'
                                %td
                                    @yeast_mold_100 placeholder='Not Applicable'
                            %tr
                                %td .down : 1/1000
                                %td
                                %td
                                %td
                                    @aerobic_plate_count_100 placeholder='Not Applicable'
                                %td
                                    @yeast_mold_100 placeholder='Not Applicable'
                        %group
                            @salmonella placeholder='Not Applicable'
                    %separator $Extra_Tests

        %record model='ir.ui.view' #fnx_quality_assurance_tree_view
            @name: Quality Assurance List
            @model: fnx.quality_assurance
            @arch type='xml'
                %tree $Quality_Assurance
                    @lot_no
                    @test_date
                    @result

        %record model='ir.actions.act_window' #fnx_quality_assurance_history_action
            @name: Tests
            @type: ir.actions.act_window
            @res_model: fnx.quality_assurance
            @view_type: form
            @view_mode: tree,form

        %menuitem name='Tests' sequence='10' parent='fnx_quality_assurance_sub' groups='fnx_qa.group_fnx_quality_assurance_user' action='fnx_quality_assurance_history_action' #fnx_quality_assurance_history
